{
  "columns": [
    {
      "width": <%- leftColumnWidth %>,
      "text": "Publications",
      "style": "columnHeader"
    },
    [
      <% for(var i = 0; i < list.length; i++) { var item = list[i]; %>
      {
        "width": <%- pageWidth - leftColumnWidth %>,
        "margin": [0, 0, 0, -8],
        "layout": "noBorders",
        "table": {
          "widths": ["100%"],
          "body": [
            [
              [
                {
                  "margin": [0, 0, 0, 0],
                  "layout": "noBorders",
                  "table": {
                    "widths": ["*"],
                    "body": [
                      [
                        { "text": "<%- item.Company %>", "style":"publicationHeader"}
                      ]
                    ]
                  }
                },
                [
                  <% for(var j = 0; j < item.Publications.length; j++) { var pub = item.Publications[j]; %>
                  {
                    "ul": [
                      { "text": "<%- pub.Title %>", "style":"publicationTitle"}
                    ]
                  },
                  {
                    "width": <%- pageWidth - leftColumnWidth %>,
                    "table": {
                      "widths": ["auto", "*"],
                      "body": [
                        [
                          "-",
                          { "text": "<%- pub.Authors %>, <%- pub.Publisher %>"}
                        ]
                      ]
                    },
                    "margin": [ <%- 2.5*linePadding %>, 0, 0, 0],
                    "layout": "noBorders"
                  }
                  <% if(j+1 != item.Publications.length){ %>,<% } %>
                  <% } %>
                ],
                {
                    "text": "",
                    "margin": [ 0, 5, 0, 0]
                }
              ]
            ]
          ]
        }
      }
      <% if(i+1 != list.length){ %>,<% } %>
      <% } %>
    ]
  ],
  "columnGap": <%- linePadding %>
}