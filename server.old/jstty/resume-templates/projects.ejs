{
  "columns": [
    {
      "width": <%- leftColumnWidth %>,
      "text": "Projects & Experience",
      "style": "columnHeader"
    },
    [
      <% for(var i = 0; i < list.length; i++) { var item = list[i]; %>
      {
        "width": <%- pageWidth - leftColumnWidth %>,
        "margin": [0, 0, 0, -8],
        "layout": "noBorders",
        "table": {
          "widths": ["100%"],
          "body": [
            [
              [
                {
                  "margin": [0, 0, 0, 0],
                  "layout": "noBorders",
                  "table": {
                    "widths": ["auto", "*"],
                    "body": [
                      [
                        { "text": "<%- item.Position %> - <%- item.Company %>", "style":"companyHeader"},
                        { "text":"<%- item.StartDate %> - <%- item.EndDate %>", "alignment":"right", "style":"companySubHeader"}
                      ],
                      [
                        { "text": "<%- item.Location %>", "style":"companySubHeader"},
                        { "text": "<%- item.Link %>", "alignment":"right", "style":"companySubHeader"}
                      ]
                    ]
                  }
                },
                [
                  <% for(var j = 0; j < item.Projects.length; j++) { var project = item.Projects[j]; %>
                  {
                    "ul": ["<%- project.Title %><% if(project.Version){%> - <%- project.Version %><% } %>"]
                  },
                  {
                    "width": <%- pageWidth - leftColumnWidth %>,
                    "table": {
                      "widths": ["auto", "*"],
                      "body": [
                        <% for(var k = 0; k < project.Points.length; k++) { var point = project.Points[k]; %>
                        <% if(k+1 != project.Points.length) { %>
                          [
                            "-",
                            { "text": "<%- point %>", "margin": [ 0, -1, 0, 0.5] }
                          ],<%
                        } else { %>
                          [
                            "-",
                            { "text": "<%- point %>", "margin": [ 0, -1, 0, 5] }
                          ]<%
                          }
                        } %>
                      ]
                    },
                    "margin": [ <%- 2.5*linePadding %>, 0, 0, 0],
                    "layout": "noBorders"
                  }
                  <% if(j+1 != item.Projects.length){ %>,<% } %>
                  <% } %>
                ],
                {
                    "text": "",
                    "margin": [ 0, 5, 0, 0]
                }
              ]
            ]
          ]
        }
      }
      <% if(i+1 != list.length){ %>,<% } %>
      <% } %>
    ]
  ],
  "columnGap": <%- linePadding %>
}